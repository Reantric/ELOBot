{

    "compilerOptions": {
        "allowJs": true,
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "dist",
        "removeComments": true,
        "strict": true, 
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "inlineSourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
    
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]

}